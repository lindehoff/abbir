{
  "mailListener": {
    "host": "mailcluster.loopia.se",
    "port": 993,
    "tls": true,
    "connTimeout": 10000,
    "authTimeout": 5000,
    "tlsOptions": { "rejectUnauthorized": false },
    "mailbox": "INBOX",
    "searchFilter": ["UNSEEN"],
    "markSeen": false,
    "fetchUnreadOnStart": true,
    "mailParserOptions": {"streamAttachments": false},
    "attachments": false,
    "username": "user@mail.se",
    "password": "password"
  },
  "winston": {
    "consoleOptions": {
      "level": "info"
    },
    "fileOptions": {
      "filename": "logs/abbir.log",
      "level": "info",
      "maxsize": 10485760,
      "maxFiles": 10,
      "zippedArchive": true
    }
  },
  "fbi": {
    "device": "/dev/fb0",
    "blend": 500,
    "virtualConsole": 2,
    "extra": "--noverbose --readahead --norandom"
  },
  "abbir": {
    "screenName": "Kitchen",
    "imageSize": 1280,
    "imagePath": "images/Kitchen/",
    "incommingPath": "incomming",
    "acceptedUsers": [
      {
        "name": "Name",
        "emailAddress": [
          "email@domain.com"
        ]
      }
    ],
    "hardware": {
      "ledPin": 14,
      "buttonPin": 4,
      "lircInPin": 23
    }
  },
  "amazon": {
    "backup": false,
    "s3Options": {
      "accessKeyId": "",
      "secretAccessKey": "",
      "region": ""
    },
    "imageBucket": "abbir-lindehoff-kitchen"
  }
}
