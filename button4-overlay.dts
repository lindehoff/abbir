/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";

    fragment@0 {
        target = <&gpio>;
        __overlay__ {
            button4_pin: button4_pin {
                brcm,pins = <4>;     /* gpio4 */
                brcm,function = <0>; /* input */
                brcm,pull = <2>;     /* pull-down */
            };
        };
    };

    fragment@1 {
    target-path = "/soc";
        __overlay__ {
            button4: button4 {
                compatible = "gpio-keys";
                #address-cells = <1>;
                #size-cells = <0>;
                pinctrl-names = "default";
                pinctrl-0 = <&button4_pin>;
                status = "okay";

                button@4 {
                    label = "button gpio4";
                    linux,code = <4>;
                    gpios = <&gpio 4 0>;
                };
            };
        };
    };
};
